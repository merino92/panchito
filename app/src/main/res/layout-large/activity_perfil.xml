<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="univosv.listaperzo.Perfil"
    android:background="@drawable/fondoprueba">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:logo="@mipmap/logofab"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:background="#92030e63"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="12sp"
                android:text="U  N  I  V  O"
                android:textColor="#BD760B"
                android:textSize="35dp"
                android:gravity="center"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>


        <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height = "315dp" >
            <LinearLayout
                android:background = "@drawable/gradientbackground"
                android:layout_width = "match_parent"
                android:layout_height = "325dp"
                android:orientation = "vertical" >
                <ImageView
                    android:layout_marginTop = "45dp"
                    android:layout_gravity = "center_horizontal"
                    android:layout_width = "125dp"
                    android:layout_height = "125dp"
                    android:src = "@drawable/gato" />
                <TextView
                    android:layout_marginTop = "10dp"
                    android:layout_gravity = "center_horizontal"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text = "Adolfo Herrera"
                    android:textColor = "#fff"
                    android:textStyle = "bold"
                    android:textSize = "21sp" />
            </LinearLayout >
            <android.support.v7.widget.CardView
                android:layout_width = "400dp"
                android:layout_height = "100dp"
                android:layout_centerHorizontal = "true"
                android:layout_marginTop = "225dp" >
                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:orientation = "horizontal"
                    android:weightSum = "3" >
                    <LinearLayout
                        android:gravity= "center"
                        android:orientation = "vertical"
                        android:layout_width = "0dp"
                        android:layout_weight = "1"
                        android:layout_height = "match_parent" >
                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "Cum"
                            android:textSize = "20sp"
                            />
                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "8.00"
                            android:textStyle = "bold"
                            android:textSize = "20sp"
                            android:paddingTop = "10dp"
                            android:textColor = "@color/starblue"/>

                    </LinearLayout >
                    <LinearLayout
                        android:gravity="center"
                        android:orientation = "vertical"
                        android:layout_width = "0dp"
                        android:layout_weight = "1"
                        android:layout_height = "match_parent" >
                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "Ciclo"
                            android:textSize = "20sp"
                            />
                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "08"
                            android:textStyle = "bold"
                            android:textSize = "20sp"
                            android:paddingTop = "10dp"
                            android:textColor = "@color/starblue" />

                    </LinearLayout >
                    <LinearLayout
                        android:gravity="center"
                        android:orientation = "vertical"
                        android:layout_width = "0dp"
                        android:layout_weight = "1"
                        android:layout_height = "match_parent" >
                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "Plan"
                            android:textSize = "20sp"
                            />
                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "03"
                            android:textStyle = "bold"
                            android:textSize = "20sp"
                            android:paddingTop = "10dp"
                            android:textColor = "@color/starblue" />

                    </LinearLayout >
                </LinearLayout >

            </android.support.v7.widget.CardView>
        </RelativeLayout >

        <LinearLayout
            android:layout_width = "350dp"
            android:layout_height = "wrap_content"
            android:orientation = "vertical"
            android:layout_gravity = "center"
            android:layout_marginTop = "1dp" >
            <LinearLayout
                android:orientation = "horizontal"
                android:paddingLeft = "25dp"
                android:background="@drawable/post_border_style"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content" >
                <ImageView
                    android:layout_width = "36dp"
                    android:layout_height = "36dp"
                    android:src = "@drawable/ic_email" />
                <TextView
                    android:textStyle = "bold"
                    android:layout_gravity = "center_vertical"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:paddingLeft = "20dp"
                    android:textColor="#BD760B"
                    android:text = " jose@gmail.com " />
            </LinearLayout >
            <LinearLayout
                android:layout_marginTop = "25dp"
                android:orientation = "horizontal"
                android:paddingLeft = "25dp"
                android:background="@drawable/post_border_style"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content" >
                <ImageView
                    android:layout_width = "36dp"
                    android:layout_height = "36dp"
                    android:src = "@drawable/ic_phone" />
                <TextView
                    android:textStyle = "bold"
                    android:textColor="#BD760B"
                    android:layout_gravity = "center_vertical"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:paddingLeft = "20dp"
                    android:text = "+503 78546957" />
            </LinearLayout >
            <LinearLayout
                android:layout_marginTop = "25dp"
                android:orientation = "horizontal"
                android:paddingLeft = "25dp"
                android:layout_width = "match_parent"
                android:background="@drawable/post_border_style"
                android:layout_height = "wrap_content" >
                <ImageView
                    android:layout_width = "36dp"
                    android:layout_height = "36dp"
                    android:src = "@drawable/ic_group" />
                <TextView
                    android:textStyle = "bold"
                    android:layout_gravity = "center_vertical"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:paddingLeft = "20dp"
                    android:textColor="#BD760B"
                    android:text = "Ingenieria en sistemas informaticos" />
            </LinearLayout >
            <LinearLayout
                android:layout_marginTop = "25dp"
                android:orientation = "horizontal"
                android:paddingLeft = "25dp"
                android:background="@drawable/post_border_style"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content" >
                <ImageView
                    android:layout_width = "36dp"
                    android:layout_height = "36dp"
                    android:src = "@drawable/ic_bubble" />
                <TextView
                    android:textStyle = "bold"

                    android:layout_gravity = "center_vertical"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:paddingLeft = "20dp"
                    android:textColor="#BD760B"
                    android:text = " U20151477" />
            </LinearLayout >
        </LinearLayout >


    </LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#c9134cf7"
        fab:menu_colorPressed="#38e0f2"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_label="Menu"
        fab:menu_fab_size="normal"
        fab:menu_icon="@mipmap/logofab"
        fab:menu_labels_colorNormal="#62051859"
        fab:menu_labels_colorPressed="#ed50ffb0"
        fab:menu_labels_colorRipple="#544279f1"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#fdfdfd"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#510abefa"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_actualizar"
            fab:fab_label="Actualizar"
            fab:fab_size="mini"
            app:fab_colorNormal="#ea009df9"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_noticia"
            fab:fab_label="Noticias"
            fab:fab_size="mini"
            app:fab_colorNormal="#ea009df9"
            android:onClick="lanzarNoticias"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notas"
            fab:fab_label="Notas"
            fab:fab_size="mini"
            app:fab_colorNormal="#ea009df9"
            android:onClick="lanzarNotas"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pagos"
            fab:fab_label="Pagos"
            fab:fab_size="mini"
            app:fab_colorNormal="#ea009df9"
            android:onClick="lanzarPagos"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_horario"
            fab:fab_label="Horarios"
            fab:fab_size="mini"
            app:fab_colorNormal="#ea009df9"
            android:onClick="lanzarHorario"
            />
    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
