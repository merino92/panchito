<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoprueba">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/post_border_style"
        android:orientation="vertical" >


        <LinearLayout
            android:id="@+id/box_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/post_background_style"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/single_post_circuito_linearbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="5dp" >
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Tabla"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1" >
                    <TextView
                        android:id="@+id/Nmateria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5px"
                        android:text="materia"
                        android:textColor="#BD760B"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:drawablePadding="1dp"
                        android:drawableLeft="@drawable/ic_mate"
                        />
                    <FrameLayout
                        android:id="@+id/LineaCabecera1"
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:layout_span="6"
                        android:background="#FFFFFF" >
                    </FrameLayout>

                    <TableRow
                        android:id="@+id/Cabecera"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/ColmHora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5px"
                            android:text="Hora"
                            android:textColor="#BD760B"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/ColumDias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="5px"
                            android:text="Dia"
                            android:textColor="#BD760B"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/ColumAula"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5px"
                            android:text="Aula"
                            android:textColor="#BD760B"
                            android:textSize="10sp" />




                    </TableRow>

                    <TableRow
                        android:id="@+id/SeparadorCabecera"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <FrameLayout
                            android:id="@+id/LineaCabecera"
                            android:layout_width="fill_parent"
                            android:layout_height="2px"
                            android:layout_span="6"
                            android:background="#FFFFFF" >
                        </FrameLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/Fila1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/hora1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/dias1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/aula1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textSize="9sp" />

                    </TableRow>



                    <TableRow
                        android:id="@+id/SeparadorTotales"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <FrameLayout
                            android:id="@+id/LineaTotales"
                            android:layout_width="fill_parent"
                            android:layout_height="2px"
                            android:layout_span="5"
                            android:background="#FFFFFF" >
                        </FrameLayout>
                    </TableRow>


                </TableLayout>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>